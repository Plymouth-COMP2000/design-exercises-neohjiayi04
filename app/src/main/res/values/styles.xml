<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryDark">@color/orange_primary_dark</item>
        <item name="colorAccent">@color/orange_accent</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Toolbar Title Style -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <!-- Bottom Navigation Text Style -->
    <style name="BottomNavTextStyle" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <!-- Material Chip Style -->
    <style name="ChipStyle" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@drawable/chip_background</item>
        <item name="chipStrokeColor">@color/orange_primary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@drawable/chip_text_color</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipCornerRadius">18dp</item>
    </style>

    <!-- Card Style -->
    <style name="CardViewStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Button Styles -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/orange_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <style name="SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/orange_primary</item>
        <item name="android:textColor">@color/orange_primary</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <!-- Text Input Layout Style -->
    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/orange_primary</item>
        <item name="hintTextColor">@color/orange_primary</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_small</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_small</item>
    </style>

    <style name="BottomNavTextStyle" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">@dimen/text_small</item>  <!-- 12sp -->
        <item name="fontFamily">sans-serif</item>
    </style>

</resources>