<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FFF5EB"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_revert"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:id="@+id/imageViewNotification"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_popup_reminder"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <!-- Food Image -->
        <ImageView
            android:id="@+id/imageViewFood"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:src="@android:drawable/ic_menu_gallery"/>

        <!-- Food Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Food Name and Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewFoodName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Food Name"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/textViewPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM 00.00"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FF9966"/>
            </LinearLayout>

            <!-- Details Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text description of the food. This food is delicious, yummy, awesome and unforgettable. If you come, must try!!! You won't be regretted."
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"/>

            <!-- Remarks Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remarks"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <!-- Checkboxes -->
            <CheckBox
                android:id="@+id/checkBoxLessSpicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Less Spicy"
                android:textSize="16sp"
                android:padding="8dp"/>

            <CheckBox
                android:id="@+id/checkBoxLessSalty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Less salty"
                android:textSize="16sp"
                android:padding="8dp"/>

            <CheckBox
                android:id="@+id/checkBoxLessSweet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Less sweet"
                android:textSize="16sp"
                android:padding="8dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>