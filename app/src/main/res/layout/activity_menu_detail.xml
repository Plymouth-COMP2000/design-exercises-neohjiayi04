<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EB"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Back and Notification -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="12dp">

            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="Back"
                app:tint="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Menu Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <ImageView
                android:id="@+id/imageViewNotification"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_popup_reminder"
                android:contentDescription="Notifications"
                app:tint="#FF9966" />
        </RelativeLayout>

        <!-- Food Image -->
        <ImageView
            android:id="@+id/imageViewFood"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            android:contentDescription="Food Image"
            android:background="@android:color/white" />

        <!-- Content Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="4dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Food Name and Category -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/textViewFoodName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Food Name"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/textViewCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Main Course"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:background="#F0F0F0"
                        android:padding="6dp"
                        android:layout_marginStart="8dp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Price -->
                <TextView
                    android:id="@+id/textViewPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM 00.00"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FF9966"
                    android:layout_marginBottom="16dp" />

                <!-- Description Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <!-- Description Text -->
                <TextView
                    android:id="@+id/textViewDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Text description of the food. This food is delicious, yummy, awesome and unforgettable."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="20dp" />

                <!-- Customization Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customization (Optional)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <!-- Checkbox: Less Spicy -->
                <CheckBox
                    android:id="@+id/checkBoxLessSpicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ¶ï¸ Less Spicy"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- Checkbox: Less Salty -->
                <CheckBox
                    android:id="@+id/checkBoxLessSalty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§‚ Less Salty"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- Checkbox: Less Sweet -->
                <CheckBox
                    android:id="@+id/checkBoxLessSweet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¬ Less Sweet"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:padding="8dp"
                    android:layout_marginBottom="24dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>