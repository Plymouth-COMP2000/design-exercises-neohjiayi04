<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF5EB">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENU"
            android:gravity="center_vertical"            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewNotification"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_popup_reminder"
            android:contentDescription="Notifications"
            app:tint="#FF9966" />
    </RelativeLayout>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@android:color/white"
        android:padding="12dp"
        android:hint="Search menu..."
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:elevation="2dp" />

    <!-- Category Filter -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCategoryAll"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="All"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FF9966"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnCategoryMain"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Main Food"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#333333" />

            <Button
                android:id="@+id/btnCategoryDesserts"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Desserts"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#333333" />

            <Button
                android:id="@+id/btnCategoryBeverages"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Beverages"
                android:textSize="14sp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#333333" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Menu RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMenu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemIconTint="@color/selector_bottom_nav"
        app:itemTextColor="@color/selector_bottom_nav"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>