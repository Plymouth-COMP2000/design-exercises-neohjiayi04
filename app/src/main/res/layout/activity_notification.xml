<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAF7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Page Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2C2C2C"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay updated on your reservations"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp"/>

        <!-- Notification Card 1 - Confirmed -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Status Icon -->
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="âœ”ï¸âœ”"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="@drawable/circle_green_bg"
                    android:layout_marginEnd="12dp"/>

                <!-- Notification Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reservation Confirmed"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2C2C2C"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your table for 2 at Dineo has been confirmed"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dec 3, 2025 at 2:45 PM"
                        android:textSize="12sp"
                        android:textColor="#999999"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Notification Card 2 - Updated -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Status Icon -->
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="âœï¸"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="@drawable/circle_orange_bg"
                    android:layout_marginEnd="12dp"/>

                <!-- Notification Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reservation Updated"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2C2C2C"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your table for 4 at Dineo has been updated to 7:00 PM"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dec 2, 2025 at 11:20 AM"
                        android:textSize="12sp"
                        android:textColor="#999999"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Notification Card 3 - Cancelled -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Status Icon -->
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="âŒ"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="@drawable/circle_red_bg"
                    android:layout_marginEnd="12dp"/>

                <!-- Notification Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reservation Cancelled"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2C2C2C"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your reservation for 3 at Dineo has been cancelled"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reason: Cancelled due to unexpected closure at 7:30 PM"
                        android:textSize="13sp"
                        android:textColor="#D32F2F"
                        android:textStyle="italic"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dec 1, 2025 at 5:15 PM"
                        android:textSize="12sp"
                        android:textColor="#999999"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Empty State (show when no notifications) -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ””"
                android:textSize="48sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No notifications yet"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C2C2C"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We'll notify you about your reservation updates here"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>