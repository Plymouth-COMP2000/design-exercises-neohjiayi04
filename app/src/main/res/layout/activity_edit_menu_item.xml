<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="16dp"
        android:background="#FFF5EB">

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Menu Item"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Image Preview with Change Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#F5F5F5">

                <ImageView
                    android:id="@+id/imageViewPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_gallery"/>

                <Button
                    android:id="@+id/imageViewChangeImage"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Change Image"
                    android:textSize="12sp"
                    android:backgroundTint="#FF9966"
                    android:textColor="@android:color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="8dp"/>
            </RelativeLayout>

            <!-- Item Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/editTextItemName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Classic Cheeseburger"
                android:padding="12dp"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"/>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="A juicy beef patty topped with melted cheddar cheese..."
                android:gravity="top|start"
                android:padding="12dp"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"/>

            <!-- Price -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/editTextPrice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="$ 12.99"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"/>

            <!-- Category -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"/>

            <!-- Save Button -->
            <Button
                android:id="@+id/btnSaveItem"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Save Item"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp"/>

            <!-- Delete Button -->
            <Button
                android:id="@+id/btnDeleteItem"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Delete Item"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>