<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_notification"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Food Image -->
            <ImageView
                android:id="@+id/ivFoodImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/m2"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp"/>

            <!-- Food Name and Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvFoodName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Food Name"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM 00.00"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
            </LinearLayout>

            <!-- Details Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text description of the food. This food is delicious, yummy, awesome and unforgettable. If you come, must try!!! You won't be regretted."
                android:textSize="16sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"/>

            <!-- Remarks Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remarks"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"/>

            <!-- Checkbox: Less Spicy -->
            <CheckBox
                android:id="@+id/cbLessSpicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Less Spicy"
                android:textSize="16sp"
                android:textColor="#000000"
                android:button="@drawable/custom_checkbox"
                android:paddingStart="12dp"
                android:layout_marginBottom="4dp"/>

            <!-- Checkbox: Less Salty -->
            <CheckBox
                android:id="@+id/cbLessSalty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Less salty"
                android:textSize="16sp"
                android:textColor="#000000"
                android:button="@drawable/custom_checkbox"
                android:paddingStart="12dp"
                android:layout_marginBottom="4dp"/>

            <!-- Checkbox: Less Sweet -->
            <CheckBox
                android:id="@+id/cbLessSweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Less sweet"
                android:textSize="16sp"
                android:textColor="#000000"
                android:button="@drawable/custom_checkbox"
                android:paddingStart="12dp"
                android:layout_marginBottom="4dp"/>

        </LinearLayout>
    </ScrollView>
    <!--  Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <!-- MENU -->
        <LinearLayout
            android:id="@+id/navMenu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingVertical="6dp">

            <ImageView
                android:id="@+id/iconMenu"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_menu"
                android:tint="@color/text_secondary"/>

            <TextView
                android:id="@+id/textMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- RESERVATION -->
        <LinearLayout
            android:id="@+id/navReservation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingVertical="6dp">

            <ImageView
                android:id="@+id/iconReservation"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_table"
                android:tint="@color/text_secondary"/>

            <TextView
                android:id="@+id/textReservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservation"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- PROFILE -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingVertical="6dp">

            <ImageView
                android:id="@+id/iconProfile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_profile"
                android:tint="@color/text_secondary"/>

            <TextView
                android:id="@+id/textProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>