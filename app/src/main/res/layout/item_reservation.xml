<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Time -->
        <TextView
            android:id="@+id/tv_time_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7:30"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_time_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PM"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_time_hour"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Vertical Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/gray"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_time_period" />

        <!-- Customer Name -->
        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jane Doe"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintEnd_toStartOf="@id/iv_arrow" />

        <!-- Number of Guests -->
        <TextView
            android:id="@+id/tv_guests"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4 guests"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_customer_name"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintEnd_toStartOf="@id/iv_arrow" />

        <!-- Status Badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/orange_light"
            app:strokeWidth="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_guests"
            app:layout_constraintStart_toEndOf="@id/divider">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Special Request Icon (Optional) -->
        <ImageView
            android:id="@+id/iv_special_request"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_note"
            app:tint="@color/orange_accent"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_guests"
            app:layout_constraintBottom_toBottomOf="@id/card_status"
            app:layout_constraintStart_toEndOf="@id/card_status"
            android:contentDescription="Special Request" />

        <!-- Arrow Icon -->
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/text_secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="View Details" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
