<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_bg"
                android:padding="15dp">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@color/white"
                    android:contentDescription="Back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/edit_profile_title"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <!-- Profile Picture Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:gravity="center"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:elevation="6dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/circle_frame"
                    android:contentDescription="@string/profile_picture"
                    android:src="@drawable/ic_profile" />

                <ImageView
                    android:id="@+id/editProfileImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignEnd="@id/profileImage"
                    android:layout_alignBottom="@id/profileImage"
                    android:background="@drawable/circle_frame"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/edit_profile_picture"
                    android:elevation="8dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_camera"
                    android:translationX="10dp"
                    android:translationY="10dp" />

            </RelativeLayout>

            <!--Profile Details-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_account"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <!-- Edit User Profile Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <!-- Full Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:text="@string/label_full_name"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/editFullName"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:background="@drawable/edit_text_bg"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:text="@string/name"
                            android:hint="@string/hint_full_name"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/hint"
                            android:inputType="textPersonName" />
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:text="@string/label_email_address"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/editEmail"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:background="@drawable/edit_text_bg"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:text="@string/email"
                            android:hint="@string/hint_email"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/hint"
                            android:inputType="textEmailAddress" />
                    </LinearLayout>

                    <!-- Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:text="@string/label_phone_number"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/editPhone"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:background="@drawable/edit_text_bg"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:text="@string/phone"
                            android:hint="@string/hint_phone"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/hint"
                            android:inputType="phone" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Save Button-->
            <androidx.cardview.widget.CardView
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/success"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/btn_save_changes"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/button_text" />
            </androidx.cardview.widget.CardView>

            <!-- Cancel Button -->
            <TextView
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text="@string/cancel"
                android:textColor="@color/text_secondary"
                android:textSize="15sp"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>
    </ScrollView>

    <!--  Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <!-- MENU -->
        <LinearLayout
            android:id="@+id/navMenu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingVertical="6dp">

            <ImageView
                android:id="@+id/iconMenu"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_menu"
                android:tint="@color/text_secondary"/>

            <TextView
                android:id="@+id/textMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- RESERVATION -->
        <LinearLayout
            android:id="@+id/navReservation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingVertical="6dp">

            <ImageView
                android:id="@+id/iconReservation"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_table"
                android:tint="@color/text_secondary"/>

            <TextView
                android:id="@+id/textReservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservation"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- PROFILE -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingVertical="6dp">

            <ImageView
                android:id="@+id/iconProfile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_profile"
                android:tint="@color/primary"/>

            <TextView
                android:id="@+id/textProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
