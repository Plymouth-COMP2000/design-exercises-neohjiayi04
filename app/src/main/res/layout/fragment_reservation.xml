<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Page Title -->
            <TextView
                android:id="@+id/tvPageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservation"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Notification Icon -->
            <ImageButton
                android:id="@+id/btnNotification"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_notification"
                android:contentDescription="@string/nav_notification"
                android:tint="#673012"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="openNotificationPage" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Book Your Table Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bookingCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Your Table"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select the details for your booking"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="20dp" />

                    <!-- Date Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundColor="@color/gray_light"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dec 24, 2024"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:background="@android:color/transparent" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Time Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundColor="@color/gray_light"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="7:30 PM"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:background="@android:color/transparent" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Number of Guests -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_people"
                            android:tint="@color/text_primary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Number of guests"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary" />

                        <!-- Decrease Button -->
                        <ImageButton
                            android:id="@+id/btnDecrease"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_minus"
                            android:background="@drawable/bg_guest_button"
                            android:tint="@color/text_primary"
                            android:contentDescription="Decrease" />

                        <!-- Guest Count -->
                        <TextView
                            android:id="@+id/tvGuestCount"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:gravity="center" />

                        <!-- Increase Button -->
                        <ImageButton
                            android:id="@+id/btnIncrease"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_plus"
                            android:background="@drawable/bg_guest_button"
                            android:tint="@color/text_primary"
                            android:contentDescription="Increase" />
                    </LinearLayout>

                    <!-- Reserve Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnReserve"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Reserve"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/primary" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Reservation Records Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservation Records"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <!-- Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Upcoming Tab -->
                <TextView
                    android:id="@+id/tabUpcoming"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Upcoming"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:background="@drawable/tab_selected" />

                <!-- Finished Tab -->
                <TextView
                    android:id="@+id/tabFinished"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Finished"
                    android:textSize="15sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:paddingBottom="8dp" />
            </LinearLayout>

            <!-- Reservation List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Reservation Item 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <!-- Date and Time -->
                        <TextView
                            android:id="@+id/tvDateTime1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Dec 25, 2024 at 7:30 PM"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tvStatus1" />

                        <!-- Status Badge -->
                        <TextView
                            android:id="@+id/tvStatus1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confirmed"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/badge_confirmed"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- Pax Info -->
                        <TextView
                            android:id="@+id/tvPax1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 Pax"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp"
                            app:layout_constraintTop_toBottomOf="@id/tvDateTime1"
                            app:layout_constraintStart_toStartOf="parent" />

                        <!-- Action Buttons -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/tvPax1"
                            app:layout_constraintEnd_toEndOf="parent">

                            <!-- Edit Button -->
                            <ImageButton
                                android:id="@+id/btnEdit1"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_edit"
                                android:background="@drawable/bg_action_button"
                                android:tint="@color/text_secondary"
                                android:contentDescription="Edit"
                                android:layout_marginEnd="8dp" />

                            <!-- Cancel Button -->
                            <ImageButton
                                android:id="@+id/btnCancel1"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_cancel"
                                android:background="@drawable/bg_action_button"
                                android:tint="@color/text_secondary"
                                android:contentDescription="Cancel" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Reservation Item 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <!-- Date and Time -->
                        <TextView
                            android:id="@+id/tvDateTime2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Jan 15, 2025 at 8:00 PM"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tvStatus2" />

                        <!-- Status Badge -->
                        <TextView
                            android:id="@+id/tvStatus2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confirmed"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/badge_confirmed"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- Pax Info -->
                        <TextView
                            android:id="@+id/tvPax2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 Pax"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp"
                            app:layout_constraintTop_toBottomOf="@id/tvDateTime2"
                            app:layout_constraintStart_toStartOf="parent" />

                        <!-- Action Buttons -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/tvPax2"
                            app:layout_constraintEnd_toEndOf="parent">

                            <!-- Edit Button -->
                            <ImageButton
                                android:id="@+id/btnEdit2"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_edit"
                                android:background="@drawable/bg_action_button"
                                android:tint="@color/text_secondary"
                                android:contentDescription="Edit"
                                android:layout_marginEnd="8dp" />

                            <!-- Cancel Button -->
                            <ImageButton
                                android:id="@+id/btnCancel2"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_cancel"
                                android:background="@drawable/bg_action_button"
                                android:tint="@color/text_secondary"
                                android:contentDescription="Cancel" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>