<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dineo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- LAUNCHER ACTIVITY -->
        <activity
            android:name=".auth.RoleSelectionActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AUTH ACTIVITIES -->
        <activity android:name=".auth.LoginActivity" />
        <activity android:name=".auth.SignUpActivity" />

        <!-- DASHBOARD -->
        <activity android:name=".dashboard.DashboardActivity" />

        <!-- MENU -->
        <activity android:name=".menu.GuestMenuActivity" />

        <!-- Staff Reservation Activities -->
        <activity
            android:name=".reservation.ReservationActivity"
            android:label="Reservations"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".reservation.ReservationDetailsActivity"
            android:label="Reservation Details"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".reservation.CalendarReservationsActivity"
            android:label="Calendar"
            android:theme="@style/AppTheme" />

        <!-- Guest Reservation Activities -->
        <activity
            android:name=".reservation.GuestReservationActivity"
            android:label="My Reservations"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".reservation.EditGuestReservationActivity"
            android:label="Edit Reservation"
            android:theme="@style/AppTheme" />

        <!-- Profile Activities -->
        <activity
            android:name=".profile.ProfileActivity"
            android:label="Profile"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".profile.EditProfileActivity"
            android:label="Edit Profile"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".profile.ResetPasswordActivity"
            android:label="Reset Password"
            android:theme="@style/AppTheme" />

    </application>

</manifest>