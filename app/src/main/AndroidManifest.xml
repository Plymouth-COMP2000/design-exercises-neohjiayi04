<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dineo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YourAppTheme">
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".guest.ReservationActivity"
            android:exported="false" />
        <activity
            android:name=".guest.GuestMenuActivity"
            android:exported="false" /> <!-- Launch Activity - This is the entry point -->
        <activity
            android:name=".LaunchActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".LaunchActivity"
            android:screenOrientation="portrait" /> <!-- Sign In Activity -->
        <activity
            android:name=".SignInActivity"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="portrait" /> <!-- Main Activity -->
        <activity
            android:name=".guest.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>