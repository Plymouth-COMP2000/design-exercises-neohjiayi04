<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tvMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENU"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_notification"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <!-- Content Scroll -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/bottomNav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Search Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="#FFF4E1">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    android:layout_marginEnd="8dp"
                    app:tint="#DE5935" />

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Search"
                    android:background="@null"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textColorHint="#999999" />
            </LinearLayout>

            <!-- Category Labels -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_margin="10dp"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnAll"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="All"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/label_hover_bg"
                        app:backgroundTint="@null"
                        android:layout_marginEnd="8dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:stateListAnimator="@null" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnRice1"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Rice"
                        android:textAllCaps="false"
                        android:textColor="#666666"
                        android:background="@drawable/label_bg"
                        app:backgroundTint="@null"
                        android:layout_marginEnd="8dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:stateListAnimator="@null" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnRice2"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Rice"
                        android:textAllCaps="false"
                        android:textColor="#666666"
                        android:background="@drawable/label_bg"
                        android:layout_marginEnd="8dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:stateListAnimator="@null" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnNoodle"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Noodle"
                        android:textAllCaps="false"
                        android:textColor="#666666"
                        android:background="@drawable/label_bg"
                        android:layout_marginEnd="8dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:stateListAnimator="@null" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnMeat"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Meat"
                        android:textAllCaps="false"
                        android:textColor="#666666"
                        android:background="@drawable/label_bg"
                        android:layout_marginEnd="8dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:stateListAnimator="@null" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnVegetable"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Vegetable"
                        android:textAllCaps="false"
                        android:textColor="#666666"
                        android:background="@drawable/label_bg"
                        android:layout_marginEnd="8dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:stateListAnimator="@null" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnDrinks"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Drinks"
                        android:textAllCaps="false"
                        android:textColor="#666666"
                        android:background="@drawable/label_bg"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:stateListAnimator="@null" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Food Grid Container (Dynamically populated) -->
            <LinearLayout
                android:id="@+id/foodGridContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation (Fixed at bottom) -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:elevation="8dp">

        <!-- Menu -->
        <LinearLayout
            android:id="@+id/navMenu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_menu"
                app:tint="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_menu"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Reservation -->
        <LinearLayout
            android:id="@+id/navReservation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_table"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_reservation"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_profile"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_profile"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>